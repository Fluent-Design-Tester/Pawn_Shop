<Page
    x:Class="Pawn_Shop.Pages.AppData.PawnCategories"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:local="using:Pawn_Shop.Pages.AppData"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <!--  Top menu group  -->
        <Grid
            Grid.Row="0"
            Margin="0,20,40,10"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Top">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <!--  Filter group  -->
            <Grid
                x:Name="Grid_Filters"
                Grid.Column="0"
                Margin="20,0,10,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center">

                <ComboBox
                    Name="Category_ComboBox"
                    Grid.Column="1"
                    Width="120"
                    Margin="0,0,7,0"
                    Header="Category"
                    SelectionChanged="Category_SelectionChanged">
                    <x:String>Gold</x:String>
                    <x:String>Cycle</x:String>
                    <x:String>Car</x:String>
                    <x:String>House</x:String>
                </ComboBox>
            </Grid>
            <!--  End filter group  -->

            <AutoSuggestBox
                x:Name="SearchBox"
                Grid.Row="0"
                Grid.Column="1"
                Width="170"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                BorderBrush="#B3B3B3"
                BorderThickness="1"
                PlaceholderText="Search . . ."
                QueryIcon="Find"
                TextChanged="AutoSuggestBox_TextChanged"
                ToolTipService.ToolTip="Searchable Fields: Name, NRC, Birthday and Phone" />

            <CommandBar
                x:Name="CommandBar"
                Grid.Row="0"
                Grid.Column="2"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Background="Transparent"
                DefaultLabelPosition="Right">
                <AppBarButton
                    Click="ButtonClick_Add"
                    Icon="Add"
                    Label="Add" />
                <AppBarButton
                    Click="ButtonClick_Edit"
                    Icon="Edit"
                    Label="Edit" />
                <AppBarButton
                    Click="ButtonClick_Delete"
                    Icon="Delete"
                    Label="Delete" />
            </CommandBar>
        </Grid>
        <!--  End filter group  -->

        <!--  Data Grid  -->
        <controls:DataGrid
            Name="DataGrid_PawnTypes"
            Grid.Row="1"
            Grid.Column="0"
            Margin="20,20,40,0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Top"
            AutoGenerateColumns="True"
            AutoGeneratingColumn="DataGrid_AutoGeneratingColumn"
            CanUserReorderColumns="False"
            CanUserResizeColumns="True"
            CanUserSortColumns="True"
            ColumnHeaderHeight="32"
            GridLinesVisibility="All"
            HeadersVisibility="Column"
            IsReadOnly="True"
            ItemsSource="{x:Bind PawnTypesList}"
            MaxColumnWidth="400"
            SelectionChanged="DataGrid_SelectionChanged"
            SelectionMode="Extended" />
        <!--  End data grid  -->

        <Grid
            x:Name="Grid_Manage_Category"
            Grid.Row="1"
            Grid.Column="1"
            Margin="0,20,30,0"
            Visibility="Collapsed">
            <StackPanel>
                <TextBlock
                    Name="TextBlock_Title"
                    Margin="0,0,0,20"
                    Style="{StaticResource BaseTextBlockStyle}"
                    Text="ပစ္စည်းအမျိုးအစား အသစ်ထည့်ပါ" />

                <TextBox
                    Name="TextBox_Category"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Top"
                    Header="Category"
                    IsEnabled="False" />

                <TextBox
                    Name="TextBox_Name"
                    Margin="0,10,0,0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Top"
                    Header="Name" />

                <StackPanel Margin="0,15,0,0" Orientation="Horizontal">
                    <Button
                        x:Name="Button_Save"
                        Margin="0,0,0,0"
                        HorizontalAlignment="Left"
                        Click="ButtonClick_Save"
                        Style="{StaticResource AccentButtonStyle}">
                        <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                            <FontIcon
                                VerticalAlignment="Center"
                                FontFamily="Segoe MDL2 Assets"
                                FontSize="17"
                                Glyph="&#xE74E;" />
                            <TextBlock Margin="5,0,0,0" VerticalAlignment="Center">Save</TextBlock>
                        </StackPanel>
                    </Button>
                    <Button
                        x:Name="Button_ClearField"
                        Margin="10,0,0,0"
                        Click="ButtonClick_Clear"
                        Style="{StaticResource ButtonRevealStyle}">
                        <StackPanel Orientation="Horizontal">
                            <FontIcon
                                VerticalAlignment="Center"
                                FontFamily="Segoe MDL2 Assets"
                                FontSize="17"
                                Glyph="&#xE711;" />
                            <TextBlock Margin="5,0,0,0">Clear Field</TextBlock>
                        </StackPanel>
                    </Button>
                    <Button
                        x:Name="Button_ConfirmDelete"
                        Margin="0,0,0,0"
                        HorizontalAlignment="Left"
                        Click="ButtonClick_ConfirmDelete"
                        Style="{StaticResource AccentButtonStyle}"
                        Visibility="Collapsed">
                        <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                            <FontIcon
                                VerticalAlignment="Center"
                                FontFamily="Segoe MDL2 Assets"
                                FontSize="17"
                                Glyph="&#xE74D;" />
                            <TextBlock Margin="5,0,0,0" VerticalAlignment="Center">Delete</TextBlock>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Grid>

        <!-- <controls:InAppNotification x:Name="ExampleInAppNotification" /> -->
    </Grid>
</Page>
