                        </Grid>
                    </StackPanel>
                    <!--  / One Block  -->

                    <!--  One Block  -->
                    <StackPanel
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="0,20,50,0">

                        <TextBlock
                            Grid.Row="0"
                            Style="{StaticResource BaseTextBlockStyle}"
                            Text="အမှန်ရောင်းဈေး" />

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <!--  Row  -->
                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="0"
                                Margin="0,10,0,0">
