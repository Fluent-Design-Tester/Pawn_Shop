                            </TextBlock>

                            <TextBlock
                                Grid.Row="4"
                                Grid.Column="1"
                                Text="1050000" />
                            <!--  /Row  -->
                        </Grid>
                    </StackPanel>
                    <!--  / One Block  -->

                    <!--  One Block  -->
                    <StackPanel
                        Grid.Row="2"
                        Grid.Column="0"
                        Margin="0,20,50,0">

                        <TextBlock Style="{StaticResource BaseTextBlockStyle}" Text="ဝယ်ဈေး" />

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
