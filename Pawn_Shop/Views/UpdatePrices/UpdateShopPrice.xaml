<Page
    x:Class="Pawn_Shop.Views.UpdatePrices.UpdateShopPrice"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="25,10,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <StackPanel
                x:Name="Header_Column_1"
                Grid.Row="0"
                Grid.Column="0"
                Width="Auto"
                Orientation="Horizontal">

                <Border
                    Margin="0,0,10,0"
                    Padding="5"
                    Background="DeepPink"
                    CornerRadius="10">
                    <TextBlock
                        x:Name="TextBlock_WorldGoldPrice"
                        CharacterSpacing="30"
                        Foreground="White"
                        Text="..." />
                </Border>
                <Border
                    Margin="0,0,10,0"
                    Padding="5"
                    Background="Orange"
                    CornerRadius="10">
                    <TextBlock
                        x:Name="TextBlock_YgnGoldPrice"
                        CharacterSpacing="30"
                        Foreground="White"
                        Text="..." />
                </Border>
                <Border
                    Margin="0,0,10,0"
                    Padding="5"
                    Background="Green"
                    CornerRadius="10">
                    <TextBlock
                        x:Name="TextBlock_DollarPrice"
                        CharacterSpacing="30"
                        Foreground="White"
                        Text="..." />
                </Border>
                <Border
                    Padding="5"
                    Background="WhiteSmoke"
                    CornerRadius="10">
                    <TextBlock
                        x:Name="TextBlock_UpdatedAt"
                        Foreground="Black"
                        Text="..." />
                </Border>
                <Button
                    Grid.Row="0"
                    Grid.Column="5"
                    Margin="10,0,10,0"
                    Click="ButtonClick_Refresh"
                    CornerRadius="10"
                    Style="{StaticResource ButtonRevealStyle}">
                    <StackPanel Orientation="Horizontal">
                        <FontIcon
                            Margin="0,0,5,0"
                            VerticalAlignment="Center"
                            FontFamily="Segoe MDL2 Assets"
                            FontSize="17"
                            Glyph="&#xE72C;" />
                        <TextBlock Text="Refresh" />
                    </StackPanel>
                </Button>

            </StackPanel>
        </Grid>

        <Rectangle
            Grid.Row="1"
            Width="Auto"
            Height="0.1"
            Margin="0,0,0,0"
            Fill="LightGray" />

        <ScrollViewer Grid.Row="2" Margin="25,20,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>


                <StackPanel
                    Name="Personal_Information"
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="0,0,100,0">

                    <TextBlock Style="{StaticResource BaseTextBlockStyle}" Text="HTD ဈေး" />

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>
                        <TextBox
                            Grid.Column="0"
                            Margin="0,20,0,0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            Header="အထွေထွေစရိတ်"
                            TextChanged="TextChanged_ExtraCost" />

                        <TextBox
                            x:Name="TextBox_SDraftPrice"
                            Grid.Column="1"
                            Margin="10,20,0,0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            Header="$"
                            IsEnabled="False" />
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>
                        <TextBox
                            x:Name="TextBox_ADraftPrice"
                            Grid.Column="0"
                            Margin="0,5,0,0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            Header="A"
                            IsEnabled="False" />

                        <TextBox
                            x:Name="TextBox_BDraftPrice"
                            Grid.Column="1"
                            Margin="10,5,0,0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            Header="B"
                            IsEnabled="False" />

                        <TextBox
                            x:Name="TextBox_CDraftPrice"
                            Grid.Column="2"
                            Margin="10,5,0,0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            Header="C"
                            IsEnabled="False" />
                    </Grid>

                    <TextBlock
                        Margin="0,20,0,0"
                        Style="{StaticResource BaseTextBlockStyle}"
                        Text="အမှန်ရောင်းဈေး" />

                    <TextBox
                        x:Name="TextBox_SPrice"
                        Margin="0,10,0,0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        Header="$" />

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>
                        <TextBox
                            x:Name="TextBox_APrice"
                            Grid.Column="0"
                            Margin="0,5,0,0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            Header="A"
                            TextChanged="TextChanged_ARealSalePrice" />

                        <TextBox
                            x:Name="TextBox_BPrice"
                            Grid.Column="1"
                            Margin="10,5,0,0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            Header="B"
                            TextChanged="TextChanged_BRealSalePrice" />

                        <TextBox
                            x:Name="TextBox_CPrice"
                            Grid.Column="2"
                            Margin="10,5,0,0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            Header="C"
                            TextChanged="TextChanged_CRealSalePrice" />
                    </Grid>

                    <Rectangle
                        Grid.Row="1"
                        Width="Auto"
                        Height="0.1"
                        Margin="0,20,0,0"
                        Fill="LightGray" />

                    <TextBlock
                        Margin="0,20,0,0"
                        Style="{StaticResource BaseTextBlockStyle}"
                        Text="ဝယ်ဈေး" />

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="2*" />
                        </Grid.ColumnDefinitions>
                        <ComboBox
                            x:Name="ComboBox_ReducedPurchasingType"
                            Grid.Column="0"
                            Margin="0,20,0,0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            Header="% or Amt"
                            PlaceholderText="ရွေးပါ"
                            SelectionChanged="SelectedChanged_ReducedPurchasingType">
                            <ComboBoxItem Content="%" Tag="percent" />
                            <ComboBoxItem Content="Amount" Tag="amount" />
                        </ComboBox>

                        <TextBox
                            x:Name="TextBox_ReducedPurchasingValue"
                            Grid.Column="1"
                            Margin="10,20,0,0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            Header="Value"
                            TextChanged="TextChanged_ReducingPurchasingValue" />
                    </Grid>

                    <Grid>
