                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>
                        <TextBox
                            x:Name="TextBox_AReducedPurchasingPrice"
                            Grid.Column="0"
                            Margin="0,5,0,0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            Header="A" />

                        <TextBox
                            x:Name="TextBox_BReducedPurchasingPrice"
                            Grid.Column="1"
                            Margin="10,5,0,0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            Header="B" />

                        <TextBox
                            x:Name="TextBox_CReducedPurchasingPrice"
                            Grid.Column="2"
                            Margin="10,5,0,0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            Header="C" />
                    </Grid>
                </StackPanel>

                <StackPanel
